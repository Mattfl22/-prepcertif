<div class="container">
  <h1>All our restaurants</h1>
  <div class="spotlight bg-white rouded border p-2 w-25 mb-3 text-center text-white">
    <h3>💡 Spotlight</h3>
    <h5><%= @restaurants.sample.name %></h5>
  </div>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
    <div class="col-3">
      <div class="card mb-2">
        <h5 class="card-header"><%= restaurant.name %></h5>
        <div class="card-body">
          <h5 class="card-title">Address: <%= restaurant.address %></h5>
          <p class="card-text">Rating: <%= restaurant.stars %></p>
          <%=  link_to "See restaurant", restaurant_path(restaurant.id), class: "btn btn-primary" %>
          <%= link_to "❌", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" }, class:'text-decoration-none' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <%= link_to "New restaurant", new_restaurant_path, class: 'btn btn-secondary' %>
</div>
